{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average cost of commodities across the globe",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "C:/Users/wonga/OneDrive/Documents/FIT3179 Data Visulisation/week09_homework/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
        {
        "lookup": "properties.NAME",
        "from": {
            "data": {
                "url": "C:/Users/wonga/OneDrive/Documents/FIT3179 Data Visulisation/week09_homework/global_food_prices.csv"
            },
            "key": "Country",
            "fields": ["mp_price"]
        }
        },
        {"calculate": "datum.Active + 0.1", "as": "Active Cases"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
        "field": "Active Cases",
        "type": "quantitative",
        "scale": {"type": "log"}
    },
        "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Active", "type": "quantitative"}
        ]
    }
}

    