{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/wong-abee/FIT3179/main/DataVisualisation_2/Data/CLEAN-number-healthy-diet-unaffordable.csv"
    },
    "title": "Percentage of Population Unable to Afford a Healthy Diet",
    "width": "container",
    "height": 300,
    "params": [
          {
              "name": "Year",
              "value": 2021,
              "bind": {
                  "input": "range",
                  "min": 2017,
                  "max": 2021,
                  "step": 1,
                  "name": "Select year: "
              }
          }
      ],
      "transform": [
          {
              "filter": "datum.Year == Year"
          }
      ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Entity",
        "type": "nominal",
        "title": "Country"
      },
      "y": {
        "field": "percentage",
        "title": "Percentage of population",
        "type": "quantitative"
      },
      "tooltip": [
                  {"field": "Entity", "type": "ordinal", "title": "Country: "},
                  {"field": "percentage", "type": "quantitative", "title": "Percentage %: "}
              ]
    },
    "config": {}
  }